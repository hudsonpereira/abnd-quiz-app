<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.quizapp.MainActivity">

    <LinearLayout
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/QuestionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is 234+456?"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/QuestionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What languages are used to program Android native?"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:text="Java"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <CheckBox
            android:text="PHP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <CheckBox
            android:text="Kotlin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <CheckBox
            android:text="Go Lang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/QuestionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is the IDE used to build Android apps?"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:text="Netbeans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioButton
                android:text="Android Studio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioButton
                android:text="MS Visual Studio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioButton
                android:text="None of the above"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RadioGroup>

        <TextView
            style="@style/QuestionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How to declare a int variable called score?"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/QuestionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check all invalid variable assignments:"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:text="int age = 25;"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <CheckBox
            android:text="String name = Hudson;"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <CheckBox
            android:text="int role = Android Developer;"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <CheckBox
            android:text="String os = 'Mac os';"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <Button
            android:onClick="finish"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal"
            android:text="Finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>



</ScrollView>
